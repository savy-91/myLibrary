{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Welcome!",
  "description": "Create a new account.",
  "properties": {
    "username": {
      "title": "Username",
      "type": "string",
      "minLength": 2,
      "maxLength": 24,
      "attrs": {
        "placeholder": "Username"
      }
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 4,
      "maxLength": 64,
      "attrs": {
        "type": "password",
        "placeholder": "Password"
      }
    }
  },
  "additionalProperties": false,
  "required": ["username", "password"]
}