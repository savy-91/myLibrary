{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Book",
  "description": "Fill in the form below to edit your book.",
  "properties": {
    "title": {
      "title": "Title",
      "type": "string",
      "minLength": 3,
      "maxLength": 400,
      "attrs": {
        "placeholder": "Main title of the book"
      }
    },
    "subtitle": {
      "title": "Subtitle",
      "type": "string",
      "minLength": 3,
      "maxLength": 400,
      "attrs": {
        "placeholder": "Subtitle of the book (optional)"
      }
    },
    "publisher": {
      "title": "Publisher",
      "type": "string",
      "minLength": 10,
      "maxLength": 180,
      "attrs": {
        "placeholder": "Publisher (optional)"
      }
    },
    "intro": {
      "title": "Introductory description",
      "type": "string",
      "minLength": 10,
      "maxLength": 280,
      "attrs": {
        "placeholder": "Introductory description text (optional)"
      }
    },
    "description": {
      "title": "Description",
      "type": "string",
      "minLength": 10,
      "maxLength": 2048,
      "attrs": {
        "placeholder": "Description (optional)"
      }
    },
    "authors": {
      "title": "Authors",
      "type": "string",
      "minLength": 6,
      "maxLength": 1024,
      "attrs": {
        "placeholder": "Authors (separated by comma, e.g. John Smith, Ann Smith) (optional)"
      }
    },
    "publishedDate": {
      "title": "Publishing date (YYYY-MM-DD)",
      "type": "string",
      "minLength": 4,
      "maxLength": 120,
      "attrs": {
        "placeholder": "Publishing date (optional)"
      }
    },
    "isbn10": {
      "title": "ISBN-10",
      "type": "string",
      "minLength": 10,
      "maxLength": 10,
      "attrs": {
        "placeholder": "ISBN-10 (optional)"
      }
    },
    "isbn13": {
      "title": "ISBN-13",
      "type": "string",
      "minLength": 13,
      "maxLength": 13,
      "attrs": {
        "placeholder": "ISBN-13"
      }
    },
    "pageCount": {
      "title": "No. of pages",
      "type": "string",
      "minLength": 1,
      "maxLength": 6,
      "attrs": {
        "placeholder": "No. of pages (optional)"
      }
    },
    "notes": {
      "title": "Notes",
      "type": "string",
      "minLength": 2,
      "maxLength": 4096,
      "attrs": {
        "placeholder": "Notes (optional)"
      }
    }
  },
  "additionalProperties": false,
  "required": ["title"]
}